<Page x:Class="Task2.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task2.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Transparent">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 100"/>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal" Margin="0,181,0,0">
            <TextBlock Text="Введите номер задания 1-21: "
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="NumTask"
                     Width="100"
                     FontSize="20"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,230,0,0">
            <Button Content="Перейти к заданию"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnTask"
                    Click="BtnTask_Click"
                    Background="CornflowerBlue"
                    Padding="12">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
